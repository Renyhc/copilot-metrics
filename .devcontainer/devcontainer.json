// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// devcontainer.json reference at https://aka.ms/devcontainer.json
{
    "name": "Metrics Copilot Dev Container",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "aider-chat.aider"
            ]
        }
    },
    "forwardPorts": [3000],
    "postCreateCommand": "npm install",
    "remoteUser": "node"
}
